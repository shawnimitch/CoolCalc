<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_calc"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.shawnimitch.coolcalc.CalcActivity"
    android:background="@android:color/background_light">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="175dp"
            android:background="@color/colorPrimary">

            <TextView
                android:text="567"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ResultText"
                android:textSize="45sp"
                android:layout_gravity="right"
                android:gravity="right"
                android:paddingLeft="20dp"
                android:paddingRight="10dp"
                android:paddingTop="70dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="84dp"
            android:weightSum="4">

            <Button
                android:text="7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/sevenBtn"
                android:layout_weight="1"
                android:background="@android:color/background_light"
                android:textColor="@android:color/black" />

            <Button
                android:text="8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/eightBtn"
                android:layout_weight="1"
                android:background="@android:color/background_light"
                android:textColor="@android:color/black" />

            <Button
                android:text="9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/nineBtn"
                android:layout_weight="1"
                android:background="@android:color/background_light"
                android:textColor="@android:color/black" />

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/divide"
                android:id="@+id/divBtn"
                android:layout_weight="1"
                android:background="@android:color/background_light"
                android:src="@drawable/divide" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="84dp"
            android:weightSum="4">

            <Button
                android:text="4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/fourBtn"
                android:layout_weight="1"
                android:background="@android:color/background_light"
                android:textColor="@android:color/black" />

            <Button
                android:text="5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/fiveBtn"
                android:layout_weight="1"
                android:background="@android:color/background_light"
                android:textColor="@android:color/black" />

            <Button
                android:text="6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/sixBtn"
                android:layout_weight="1"
                android:background="@android:color/background_light"
                android:textColor="@android:color/black" />

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/multiply"
                android:id="@+id/multBtn"
                android:layout_weight="1"
                android:background="@android:color/background_light"
                android:src="@drawable/multiply" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="84dp"
            android:weightSum="4">

            <Button
                android:text="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/oneBtn"
                android:layout_weight="1"
                android:background="@android:color/background_light"
                android:textColor="@android:color/black" />

            <Button
                android:text="2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/twoBtn"
                android:layout_weight="1"
                android:background="@android:color/background_light"
                android:textColor="@android:color/black" />

            <Button
                android:text="3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/threeBtn"
                android:layout_weight="1"
                android:background="@android:color/background_light"
                android:textColor="@android:color/black" />

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/subtract"
                android:id="@+id/subBtn"
                android:layout_weight="1"
                android:background="@android:color/background_light"
                android:src="@drawable/subtract" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="84dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="192dp"
                android:layout_height="match_parent"
                android:gravity="center">

                <Button
                    android:text="Clear"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/clrBtn"
                    android:textSize="18sp"
                    android:background="@color/colorPrimary" />
            </LinearLayout>

            <Button
                android:text="0"
                android:layout_height="match_parent"
                android:id="@+id/zeroBtn"
                android:background="@android:color/background_light"
                android:textColor="@android:color/black"
                android:layout_width="78dp" />

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/add"
                android:id="@+id/addBtn"
                android:background="@android:color/background_light"
                android:src="@drawable/add" />
        </LinearLayout>

    </LinearLayout>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/equal"
        android:id="@+id/eqlBtn"
        android:background="@color/colorAccent"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:paddingTop="135dp"
        android:paddingRight="50dp"
        android:src="@drawable/equal" />
</RelativeLayout>
